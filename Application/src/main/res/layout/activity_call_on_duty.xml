<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.vsb.gis.ruz76.patrac.android.activities.CallOnDutyActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewDutyDescription"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="5px"
            android:padding="5px"
            android:text="TextView" />

        <ListView
            android:id="@+id/listViewSearches"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/buttonArrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonArrive" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/arrive60m" />

            <RadioButton
                android:id="@+id/radioButton120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/arrive120m" />

            <RadioButton
                android:id="@+id/radioButton180"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/arrive180m" />

            <RadioButton
                android:id="@+id/radioButton240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/arrive240m" />

            <RadioButton
                android:id="@+id/radioButton300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/arrive300m" />

            <RadioButton
                android:id="@+id/radioButtonGt300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/arriveGt300m" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonNotArrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonNotArrive" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
